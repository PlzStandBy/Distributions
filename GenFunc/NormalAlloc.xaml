<Page 
      x:Class="GenFunc.NormalAlloc"    
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dvc="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      xmlns:local="clr-namespace:GenFunc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NormalAlloc">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="#FF2E2E2E"></Grid>
        <TextBlock Grid.Row="0" Foreground="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">ВЕЛИЧИНА С НОРМАЛЬНЫМ РАСПРЕДЕЛЕНИЕМ</TextBlock>
        
        <WindowsFormsHost Grid.Column="0" Grid.Row="1" >
            <dvc:Chart x:Name="chartDensity" BackColor="DarkGray" />
        </WindowsFormsHost>
    </Grid>
    
</Page>
